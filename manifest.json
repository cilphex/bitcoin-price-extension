{
	"manifest_version": 2,

	"name": "BitAwesome",
	"description": "A simple extension providing current exchange rates for Bitcoin",
	"version": "0.1",

	"browser_action": {
		"default_icon": "/images/icon_19.png",
		"default_popup": "/html/popup.html"
	},

	"icons": {
		"16": "/images/icon_16.png",
		"48": "/images/icon_48.png",
		"128": "/images/icon_128.png"
	},

	"background": {
		"scripts": [
			"/js/angular.min.js",
			"/js/jquery-1.9.1.min.js",
			"/js/background.js"
		]
	},

	"permissions": [
		"*://blockchain.info/*"
	]

}